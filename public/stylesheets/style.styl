@import '_normalize'

body
  font-family: "Times New Roman", "游明朝", YuMincho, "ヒラギノ明朝 ProN W3", "Hiragino Mincho ProN", "メイリオ", Meiryo, serif;

  // @media screen and (min-width: 992px)
  //   display flex

a
  color #00B7FF

ul
  margin 0
  padding 0
  list-style none

li
  list-style none

.header
  padding 30px 0
  text-align center

  // @media screen and (min-width: 992px)
  //   height 100vh
  //   width 220px
  //   padding 0 20px
  //   box-sizing border-box

  h1
    margin 0 auto
    font-size 20px
    font-weight normal
    letter-spacing 8px
    -ms-writing-mode tb-rl /* for MS IE8+ */
    -webkit-writing-mode vertical-rl
    writing-mode vertical-rl

  p
    margin 0 0 8px
    font-size 10px

.contents
  flex 1

.ozounis
  display flex
  flex-wrap wrap
  background #222

.ozouni
  width 100%
  height 100%
  transition opacity 0.15s linear

  @media screen and (min-width: 480px)
    width 50%

  @media screen and (min-width: 768px)
    width 33.333%

  @media screen and (min-width: 992px)
    width 25%

  @media screen and (min-width: 1200px)
    width 20%

  &:hover
    opacity 0.85

  a
    display block

  img
    display block
    vertical-align: bottom;
    width 100%

#infscr-loading
  display none!important